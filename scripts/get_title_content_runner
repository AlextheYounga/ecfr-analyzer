source .env 

subroutine="flat"
input_folder=$1
output_folder=$2

structure_folder="$input_folder/structure"
source_xml="$input_folder/xml"
md_output="$output_folder/markdown/$subroutine"

# Copy the XML files to the storage folder
mkdir -p $md_output
cp -r $source_xml $output_folder

# Run Rust parser
echo -e "\nRunning Rust parser..."
./rust/target/release/title_markdown_parser $subroutine $structure_folder $source_xml $md_output